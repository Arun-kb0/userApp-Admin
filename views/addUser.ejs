<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>

  <title>Add user</title>
</head>

<body class="bg-black " style="height: 100vh;">

  <!-- * alert box -->
  <div class="d-flex  justify-content-center mt-2 w-100">
    <div class=" d-block col-lg-6 col-sm-8 col-10" id="alert-container"> </div>
  </div>
  <!-- * end *  -->

  <!-- * update and create form -->
  <div class="container h-100 justify-content-center align-content-center  ">
    <section class="container py-2 text-light col-lg-4 col-lg-6 col-sm-8 rounded-1" id="add-user-container">
      <div class="w-100 d-flex  justify-content-center my-1">
        <h2>add or edit user</h2>
      </div>

      <form action="" class="d-flex justify-content-center h-auto" id="signup-form">
        <div class="d-flex flex-column ">
          <div class="d-flex flex-sm-row flex-column  justify-content-between   w-100">
            <div class="col-sm-6  col-12 d-flex flex-column   ">
              <label class="form-label" for="firstname">First name</label>
              <input class="form-control" type="text" id="firstname" value="<%= user.firstname %>" />
              <small class="form-text text-danger opacity-0">error</small>
            </div>
            <div class="col-sm-5 col-12 d-flex flex-column   ">
              <label class="form-label" for="lastname">Last name</label>
              <input class="form-control" type="text" id="lastname" value="<%= user.lastname %>" />
              <small class="form-text text-danger opacity-0">error</small>
            </div>
          </div>

          <div class="my-1">
            <label class="col-2 form-label" for="email">email</label>
            <input class="col-9 form-control" id="email" type="email" placeholder="example@gmail.com"
              value="<%= user.email %>">
            <small class="form-text text-danger opacity-0">error message</small>
          </div>
          <div class="my-1">
            <label class="form-label " for="password">password</label>
            <input class="form-control   " id="password" type="text" placeholder="optional"">
            <small class=" form-text text-danger opacity-0 ">error message</small>
          </div>
          <div class=" my-1">
            <label class="form-label " for="objectid-string">user id</label>
            <input class="form-control   " id="objectid-string" type="text" value="<%= user._id %>">
            <small class="form-text text-danger opacity-0 ">error message</small>
          </div>

          <button class="btn btn-success  mb-3" id="create-btn" onsubmit="submit" disabled value="create">
            create new user
          </button>
          <button class="btn btn-primary mb-3" id="update-btn" onsubmit="submit" value="update">
            update existing user
          </button>
          <button class="btn btn-danger " id="delete-btn" onsubmit="submit" value="delete">
            Delete 
          </button>
        </div>
      </form>

    </section>
  </div>


  <script src="/js/alertsCreators.js"></script>
  <script src="/js/addUserScript.js"></script>

</body>

</html>